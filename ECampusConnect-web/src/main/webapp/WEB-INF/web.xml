<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>Servlets.Hello</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewAdmin</servlet-name>
        <servlet-class>Servlets.NewAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewStudent</servlet-name>
        <servlet-class>Servlets.NewStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewProfessor</servlet-name>
        <servlet-class>Servlets.NewProfessor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/Hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewAdmin</servlet-name>
        <url-pattern>/NewAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewStudent</servlet-name>
        <url-pattern>/NewStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewProfessor</servlet-name>
        <url-pattern>/NewProfessor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
